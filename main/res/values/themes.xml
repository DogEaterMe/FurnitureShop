<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FurnitureApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FurnitureApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_yellow</item>
        <item name="colorPrimaryVariant">@color/app_yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_yellow</item>
        <item name="colorSecondaryVariant">@color/app_yellow_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/app_yellow</item>
        
        <!-- Настройка цвета ripple-эффекта -->
        <item name="colorControlHighlight">@color/app_yellow_light</item>
        
        <!-- Настройка цвета курсора в EditText -->
        <item name="colorControlActivated">@color/app_yellow</item>
        
        <!-- Настройка цвета чекбоксов, радиокнопок и т.д. -->
        <item name="colorControlNormal">@color/app_yellow</item>
    </style>
</resources>